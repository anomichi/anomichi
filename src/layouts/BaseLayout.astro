---
import BaseHead from '../components/BaseHead.astro';
import { Image } from 'astro:assets';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import fallbackSrc from '../assets/cover.jpg';

interface Props {
  title?: string;
  description?: string;
  cover?: ImageMetadata;
  coverClass?: string;
}
const {title = SITE_TITLE, description = SITE_DESCRIPTION, cover, coverClass} = Astro.props;
const today = new Date();
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={title} description={description} image={cover || fallbackSrc} />
  </head>
  <body>
    <header>
      <h1><a href={import.meta.env.BASE_URL}>{SITE_TITLE}</a></h1>
    </header>
    <Image src={cover || fallbackSrc} alt="" loading="eager" layout="full-width" class={`cover monochrome photo-image ${coverClass || ''}`} />
    <main>
      <slot />
    </main>
    <footer>
      <small>&copy; {today.getFullYear()} <a href="https://github.com/anomichi" target="_blank" rel="noopener noreferrer">あの道</a> All rights reserved.</small>
    </footer>
  </body>
</html>

<style>
  header {
    border-bottom: 1px solid var(--pallet-02);
  }

  h1 {
    margin: 0;
    padding: 1em;
    font-size: 14px;
    text-align: center;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  footer {
    padding: 2em 1em;
    text-align: center;
  }

  .cover {
    max-height: clamp(150px, 30vw, 300px);
  }
</style>
